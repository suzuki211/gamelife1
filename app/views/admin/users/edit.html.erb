<!--ユーザー情報編集-->
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this book from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
　      <% end %>
      <% end %>
      <%= form_with model:@user, url: admin_user_path(@user.id), local:true do |f| %>
        <!--名前-->
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class:'form-control name' %>
        </div>
        <!--プロフィール画像-->
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:'form-control-file user_image' %>
        </div>
        <!--コメント-->
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:'form-control introduction' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>