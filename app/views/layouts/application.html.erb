<!DOCTYPE html>
<html>
  <head>
    <title>Gamelife</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_admin_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_admin_admin_session_path, method: :delete %>
      </li>
    <% elsif user_user_signed_in? %>
      <li>
        <%= link_to '投稿フォーム', new_user_game_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_user_session_path, method: :delete %>
      </li>
      <li>
      <%= link_to 'マイページ', user_user_path(current_user_user.id) %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_user_session_path %>
      </li>
    <% end %>
    <%= yield %>
  </body>
</html>