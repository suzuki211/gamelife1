<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th></th>
  </tr>
<tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_user_followings_path(user.id) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_user_followers_path(user.id) %></th>
  </tr>
  <tr>
    <th>
      <% unless current_user_user == user %>
        <% if current_user_user.following?(user) %>
          <%= link_to "Unfollow", user_user_relationships_path(user.id), method: :delete %>
        <% else %>
          <%= link_to "Follow", user_user_relationships_path(user.id), method: :post %>
        <% end %>
      <% end %>
    </th>
    <th> </th>
  </tr>
</table>
<div class='row'>
  <%= link_to '',edit_user_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>