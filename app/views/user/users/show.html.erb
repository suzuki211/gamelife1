<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <% if @user.id == current_user_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_user_path(@user) %></p>
  <% end %>
</div>

<% @games.each do |game| %>
  <div>
    <%= link_to user_game_path(game.id) do %>
      <%= attachment_image_tag game, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <% end %>
    <p>画像：<%= image_tag('no_image.jpg') %></p>
    <p>タイトル：<%= game.title %></p>
    <p>感想：<%= game.impressions %></p>
    <p>ユーザーネーム：<%= game.user.name %></p>
    <p><%= link_to "#{game.game_comments.count} コメント", user_game_path(game.id) %></p>
  </div>
<% end %>