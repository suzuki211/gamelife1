  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="col-sm-2"></th>
      <th class="col-sm-2">Title</th>
      <th class="col-sm-4">impressions</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td>
          <%= link_to user_game_path(game.id) do %>
            <%= attachment_image_tag game, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td><%= link_to game.title, user_game_path(game.id), class: "game_#{game.id}" %></td>
        <td><%= game.impressions %></td>
        <td id="favorite_<%= game.id %>">
          <%= render 'user/games/favorite', game: game %>
        </td>
        <td><%= link_to "#{game.game_comments.count} コメント", user_game_path(game.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>