<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'user/users/info', user: @game.user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <table>
        <thead>
          <tr><h2>Game detail</h2></tr>
          <tr>
            <div>
              <% if @game.user == current_user_user %>
                <%= link_to '編集', edit_user_game_path(@game), data: {'turbolinks' => false}, class: "btn btn-sm btn-danger edit_game_#{@game.id}" %>
              <% end %>
            </div>
          </tr>
          <tr>
            <div>
              <% if @game.user == current_user_user %>
                <%= link_to "削除", user_game_path(@game), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_game_#{@game.id}" %>
              <% end %>
            </div>
          </tr>
        </thead>
      </table>
  		<table class='table'>
  		  <thead>
          <tr>
            <th class="col-sm-2"></th>
            <th class="col-sm-3">Title</th>
            <th class="col-sm-4">impressions</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
  		    <tr>
  		      <td>
  		        <%= link_to user_user_path(@game.user) do %>
                <%= attachment_image_tag(@game, :image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
              <% end %>
            </td>
            <td class="title"><%= link_to @game.title, user_game_path(@game) %></td>
            <td class="impressions"><%= @game.impressions %></td>
            <td class="game-evaluation" data-score="<%= @game.evaluation %>"></td>
            <td id="favorite_<%= @game.id %>">
              <%= render 'favorite', game: @game %>
            </td>
          </tr>
        </tbody>
      </table>
      <div id="comments_area">
        <div class="comments">
          <p>コメント件数：<%= @game.game_comments.count %></p>
          <%= render 'comment', locals: { comments: @game.game_comments} %>
        </div>
      </div>
      <div class="new-comment">
        <%= form_with model:[@game, @game_comment], url: user_game_game_comments_path(@game.id), remote: true do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
 $('.game-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>