<!--TOPページ-->

<div class='container box'>
  <div class='row'>
    <div class='col align-self-center'>

　　　<h2 class='text-center'>ようこそGamelifeへ！</h2>
      <p class='text-center'>
        Gamelifeは、すべてのゲーム好きのためレビューサイトです。<br>
        レビューの作成及び閲覧には会員登録が必要です。<br>
      </p>

      <!--画像スライド-->
      <div id='carouselExampleIndicators' class='carousel slide text-center' data-ride='carousel'>
        <ol class='carousel-indicators'>
          <li data-target='#carouselExampleIndicators' data-slide-to='0' class='active'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='1'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='2'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='3'></li>
        </ol>
        <div class='carousel-inner'>
          <div class='carousel-item active'>
            <%= image_tag 'game5.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'game2.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'game3.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'game4.jpg', width: '570px', height: '370px' %>
          </div>
        </div>
        <a class='carousel-control-prev' href='#carouselExampleIndicators' role='button' data-slide='prev'>
          <span class='carousel-control-prev-icon' aria-hidden='true'></span>
          <span class='sr-only'>Previous</span>
        </a>
        <a class='carousel-control-next' href='#carouselExampleIndicators' role='button' data-slide='next'>
          <span class='carousel-control-next-icon' aria-hidden='true'></span>
          <span class='sr-only'>Next</span>
        </a>
      </div>
    </div>
  </div>
</div>


<!--新着レビュー-->
<div class='container my-5'>

  <div class='mb-3'>
      <h3 class='text-center'>新着</h3>
  </div>

  <div class='container'>
    <div class='row'>
      <% @games.each do |game| %>
        <div class='col-md-3'>
          <div class='card shadow'>
            <%= link_to user_game_path(game.id), class: 'no-underline', 'data-turbolinks': false do %>
              <%= attachment_image_tag(game, :image, width: '100%', height: '100%', fallback: 'no_image.jpg') %>
              <div class='card-body'>
                <h6 class='card-title'>
                  <%= game.title %>
                </h6>
                <p><%= game.genre.name %></td>
                <p class="game-evaluation" data-score="<%= game.evaluation %>"></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <script>
   $('.game-evaluation').raty({
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    readOnly: true,
    });
  </script>

  <div style='text-align: right;'>
    <u>
      <%= link_to '投稿一覧 >', user_games_path %>
    </u>
  </div>

</div>