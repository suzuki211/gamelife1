            <%= image_tag 'no_image.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'no_image.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'no_image.jpg', width: '570px', height: '370px' %>
