    </div>
  </div>
</div>


<!--新着レビュー-->
<div class='container my-5'>

  <div class='mb-3'>
      <h3 class='text-center'>新着</h3>
  </div>

  <div class='container'>
    <div class='row'>
      <% @games.each do |game| %>
        <div class='col-md-3'>
          <div class='card shadow'>
            <%= link_to user_game_path(game.id), class: 'no-underline', 'data-turbolinks': false do %>
              <%= attachment_image_tag(game, :image, width: '100%', height: '100%', fallback: 'no_image.jpg') %>
              <div class='card-body'>
                <h6 class='card-title'>
                  <%= game.title %>
                </h6>
                <p class='card-text'>
                  あとで
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div style='text-align: right;'>
    <u>
      <%= link_to '全ての商品を見る >', user_games_path %>
    </u>
  </div>

</div>